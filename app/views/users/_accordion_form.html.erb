<%= form_with(model: @user, local: true) do |f| %>

  <%= f.label :name, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :email, class: "label-#{yield(:class_text)}" %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label :department, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :department, class: "form-control" %>

  <%= f.label :id, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :id, class: "form-control" %>

  <%= f.label :card_id, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :card_id, class: "form-control" %>

  <%= f.label :password, class: "label-#{yield(:class_text)}" %>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.label :basic_time, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :basic_time, class: "form-control" %>

  <%= f.label :started_at, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :started_at, class: "form-control" %>

  <%= f.label :finished_at, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :finished_at, class: "form-control" %>


  
  <%= f.submit "編集する", class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
<% end %>