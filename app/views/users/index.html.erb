<% provide(:title, 'All Users') %>
<% provide(:class_text, 'user--index') %>

<h1>ユーザー一覧</h1>

<div class="col-md-10 col-md-offset-1">
  <%= will_paginate %>

    <table class="table table-condensed table-hover" id="table-users">
    <thead>
      <tr>
        <th><%= User.human_attribute_name :name %></th>
        <th></th>
      </tr>
    </thead>

    <% @users.each do |user| %>
      <tr>
        
        <td>
          <%= user.name %>
        </td>
        <td class="center">
          <% if  current_user.admin? %>
            <%= link_to "削除", user, method: :delete,
                data: { confirm: "削除してよろしいですか？"},
                class: "btn btn-danger" %>
            
            <!--accordion-containerの中にtitleとontentを配置-->
            <!--cardとcard-bodyはBootstrapのものなので使わない方は無視してください-->
            <div class="card accordion-container">
              <div class="card-body accordion-title js-accordion-title btn btn-primary">
                編集
              </div>
              <div class="card-body accordion-content">
                <%= render 'accordion_form' %>
              </div>
            </div>
          <% end %>
        </td>
        <td>
        </td>
      </tr>
    <% end %>
  </table>
  <%= will_paginate %>
</div>
