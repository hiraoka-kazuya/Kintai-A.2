<% provide(:title, 'All Users') %>
<% provide(:class_text, 'user--index') %>

<h1>ユーザー一覧</h1>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= will_paginate %>

      <table class="table table-condensed table-hover" id="table-users">
      <thead>
        <tr>
          <th><%= User.human_attribute_name :name %></th>
          <th></th>
        </tr>
      </thead>

      <% @users.each do |user| %>
        <tr>
          <td>
            <%= user.name %>
          </td>
        </tr>
        <tr>
          <td>
            <%= link_to "削除", user, method: :delete,
                data: { confirm: "削除してよろしいですか？"},
                class: "btn btn-primary" %>
          </td>
        </tr>
        <tr>
          <td class="jumbotron">
            <% if  current_user.admin? %>
              <div class="panel-group" id="accordion">
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h4 class="panel-title">
                      <a data-toggle="collapse" data-parent="#accordion" href="#users">グループ1</a>
                    </h4>
                  </div>
                  <div id="users" class="panel-collapse collapse in">
                    <div class="panel-body"><%= render 'accordion_form' %></div>
                  </div>
                </div>
              </div>

              <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#user">click me</button>
              <div id="user" class="collapse">
                <%= render 'form' %>
              </div>
              
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
    <%= will_paginate %>
  </div>
</div>
