<% provide(:title, 'All Users') %>
<% provide(:class_text, 'user--index') %>

<h1>ユーザー一覧</h1>

<div class="col-md-10 col-md-offset-1">
  <%= will_paginate %>

    <table class="table table-condensed table-hover" id="table-users">
    <thead>
      <tr>
        <th><%= User.human_attribute_name :name %></th>
        <th></th>
      </tr>
    </thead>

    <% @users.each do |user| %>
      <tr>
        <td>
          <% if current_user.admin? %>
            <%= link_to user.name, user %>
          <% else %>
            <%= user.name %>
          <% end %>
        </td>
        <td>
          <!--accordion-containerの中にtitleとontentを配置-->
          <!--cardとcard-bodyはBootstrapのものなので使わない方は無視してください-->
          <div class="card accordion-container">
            <div class="card-body accordion-title js-accordion-title">
              ここを開く
            </div>
            <div class="card-body accordion-content">
              <%= render 'accordion_form' %>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </table>
  <%= will_paginate %>
</div>
