<% provide(:title, 'All Bases') %>

<h1>拠点一覧</h1>

<div>
  <div class="table table-bordered table-condensed table-hover" id="table-bases">
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th>拠点番号</th>
        <th>拠点名</th>
        <th>拠点種類</th>
      </tr>
    </thead>

    <tbody>
      <% @bases.each do |base| %>
        <tr>
          <td class="center">
            <%= link_to "拠点情報修正", edit_basis_path(base),
                remote: true, class: "btn btn-primary" %>
          </td>
          <td class="center">
            <%= link_to "削除", base, method: :delete,
                data: { confirm: "削除してよろしいですか？"},
                class: "btn btn-primary" %>
          </td>
          <td class="center"><%= base.id %></td>
          <td class="center"><%= base.name %></td>
          <td class="center"><%= base.type %></td>
        </tr>
      <% end %>
    </tbody>
  </div>
</div>